@import '/wxcomponents/weui.wxss';
@import '/wxcomponents/iconfont.wxss';
.search-bar {
  display: flex;
  align-items: center;
  padding: 18rpx 10rpx;
}

.search-bar .search-left {
  background: #4c6ff3;
  height: 60rpx;
  border-radius: 30rpx;
  position: relative;
  flex: 2;
}

.search-bar .search-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.search-bar .search-right icon{
  font-size: 44rpx
}
.search-bar .search-right .side-pull{
  margin-right: 14rpx
}

